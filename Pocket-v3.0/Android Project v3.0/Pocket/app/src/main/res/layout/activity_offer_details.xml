<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space200">

                    <!-- Cover Image -->
                    <ImageView
                        android:id="@+id/bg_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space120"
                        android:layout_marginTop="@dimen/space80"
                        android:tint="@color/white"
                        android:visibility="visible"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY" />

                </LinearLayout>


                <!-- Square Icon image -->
                <ImageView
                    android:id="@+id/offer_icon"
                    android:layout_width="@dimen/space90"
                    android:layout_height="@dimen/space90"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/space75"
                    android:layout_marginLeft="@dimen/space10"
                    android:layout_marginStart="@dimen/space10"
                    android:layout_gravity="center" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/text_size_22"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/space20"
                    android:layout_marginEnd="@dimen/space20"
                    android:layout_marginStart="@dimen/space20"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space10"
                    android:paddingLeft="@dimen/space60"
                    android:paddingRight="@dimen/space60"
                    android:layout_gravity="center"
                    android:text="@string/placeholder"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space20"
                    android:paddingStart="@dimen/space20"
                    android:paddingEnd="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space20"
                    android:textColor="@color/black"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space20"
                    android:paddingStart="@dimen/space20"
                    android:paddingEnd="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space20"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/text_size_14"/>


                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space20"
                    android:paddingStart="@dimen/space20"
                    android:paddingEnd="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space10"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/text_size_14"/>


                <TextView
                    android:id="@+id/third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space20"
                    android:paddingStart="@dimen/space20"
                    android:paddingEnd="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space10"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/text_size_14"/>


                <TextView
                    android:id="@+id/fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space20"
                    android:paddingStart="@dimen/space20"
                    android:paddingEnd="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space10"
                    android:text="@string/placeholder"
                    android:layout_marginBottom="@dimen/space40"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space170"
                android:background="@color/bg_color"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/comSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/complete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginBottom="@dimen/space20"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="@string/placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/space20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/status_image"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"/>

            <com.droidoxy.easymoneyrewards.views.TextView_Lato
                android:id="@+id/later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space6"
                android:paddingStart="@dimen/space6"
                android:paddingEnd="@dimen/space0"
                android:paddingRight="@dimen/space0"
                android:textStyle="normal"
                android:text="@string/placeholder"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>